<%= form_for(user, :html => {:class => "form-horizontal edit_from"}) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => 'form-control',
      :data => {:validation => "required email_check"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
  </div>

<!--   <div class="form-group">
    <div class="col-sm-10">
      <%= image_tag @user.photo%>
    </div>
  </div> -->

  <div class="form-group">
    <%= f.label :photo, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= image_tag @user.photo%>
      <%= f.file_field :photo, :data => {:validation => "size mime", 
        :validation_allowing =>"jpg, png, gif",
        :validation_max_size => "1024kb" } %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :profile, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :profile, :class => 'form-control',
      :data => {:validation => 'length', :validation_length => 'max200'} %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
