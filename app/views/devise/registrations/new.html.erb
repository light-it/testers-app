<div class="border-form-div">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name,
    url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, :class => 'form-control',
        :data => { :validation => "required length",
          :validation_length => 'min2' } %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, :class => 'form-control',
        :data => { :validation => "required length",
          :validation_length => 'min2' } %>
    </div>

    <div class="form-group">
      <%= f.label :photo %><br />
      <%= f.file_field :photo,
      :data => {:validation => "file_check size",
        :validation_allowing =>"jpg, png, gif",
        :validation_max_size => "1024kb" } %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, :class => 'form-control',
      :data => {:validation => "required email"} %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control',
      :data => {:validation => "length", :validation_length => "6-15" } %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :data => { 
        :validation => "required pwd_check length", :validation_length => "6-14"},
        :class => 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
