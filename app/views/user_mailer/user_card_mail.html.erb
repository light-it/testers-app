<table align="center" width="400px" cellpadding="0" cellspacing="0"
  style="border-radius: 15px" bgcolor="#b3daff">
  <tr>
    <td align="center" bgcolor="#e6e6e6" 
      style="font-family: Arial, sans-serif; 
        font-size: 20px; font-weight: bold;
        border-radius: 15px 15px 0 0;
        padding: 10px; border-bottom: 1px solid black;">
        User profile
    </td>
  </tr>
  <tr>
    <td>
      <table width="350px" align="center" 
        style="padding: 20px 10px">
        <tr>
          <td>
            <%= image_tag @user.photo, :border => '1',
              :width => '128px', :height => '128px' %>
          </td>
          <td>
            <table>
              <tr>
                <td width="80px"
                  style="font-family: Arial, sans-serif;
                    font-size: 12px; font-weight: bold;">
                  First name:
                </td>
                <td><%= @user.first_name %></td>
              </tr>
              <tr>
                <td width="80px"
                  style="font-family: Arial, sans-serif;
                    font-size: 12px; font-weight: bold;">
                      Last name:
                </td>
                <td><%= @user.last_name %></td>
              </tr>
              <tr>
                <td width="80px"
                  style="font-family: Arial, sans-serif;
                    font-size: 12px; font-weight: bold;">
                  Email:
                </td>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <td width="80px"
                  style="font-family: Arial, sans-serif;
                    font-size: 12px; font-weight: bold;">
                  Profile:
                </td>
                <td><%= @user.profile %></td>
                <%= "</tr>" if rand(3) > 1 %>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td align="center" bgcolor="#e6e6e6"
      style="font-family: Arial, sans-serif;
      font-size: 14px; font-style: italic;
      border-radius: 0 0 15px 15px;
      padding: 10px; border-top: 1px solid black;">
        Testers application, 2016
    </td>
  </tr>
</table>